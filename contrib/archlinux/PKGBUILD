pkgname=python-lpod
pkgver=0.9
pkgrel=1
pkgdesc="Languages & Platforms OpenDocument: Python implementation"
arch=('any')
license=('GPL3' 'APACHE2')
url="http://www.lpod-project.org/"
depends=('python-lxml' 'pygobject')
source=("http://download.lpod-project.org/lpod-python/lpod-python-v$pkgver.tar.gz")
md5sums=('f8bd36fd76eb4ceeac9cae9df0d6e769')

build() {
  cd "${srcdir}/lpod-python-v$pkgver"
  python setup.py install --root="${pkgdir}" || return 1
}
